package com.array.problem;

public class SearchForRange {

	public static void main(String[] args) {

		int arr[] = { 5, 7, 7, 8, 8, 10, 10 };
		int k = 20;

		int p1 = 0;
		int p2 = arr.length;

		while (p1 < p2) {
			int mid = (p1 + p2) / 2;
			if (arr[mid] == k) {
				String res = "[";
				res = res + (mid);
				if ((mid + 1) < arr.length && arr[mid + 1] == k) {
					System.out.println("arr[mid] 1st: -> " + arr[mid + 1]);
					res = res + ", " + (mid + 1) + "]";
				}
				if ((mid - 1) >= 0 && arr[mid - 1] == k) {
					System.out.println("arr[mid] 1st: -> " + arr[mid - 1]);
					res = res + ", " + (mid - 1) + "]";
				}
				System.out.println(res);


			}
			if (arr[mid] < k)
				p1 = mid + 1;
			if (arr[mid] > k)
				p2 = mid - 1;
		}
	}

}
