package com.array.problem;

public class SearchForRange {

	public static void main(String[] args) {

		int A[] = { 5, 7, 7, 8, 8, 10, 10 };
		int k = 8;

		int p1 = 0;
		int p2 = A.length;

		while (p1 < p2) {
			int mid = (p1 + p2) / 2;
			if (A[mid] == k) {
				String res = "[";
				res = res + (mid);
				if ((mid + 1) < A.length && A[mid + 1] == k) {
					res = res + ", " + (mid + 1) + "]";
				}
				if ((mid - 1) >= 0 && A[mid - 1] == k) {
					res = res + ", " + (mid - 1) + "]";
				}
				System.out.println(res);
				return;

			}
			if (A[mid] < k)
				p1 = mid + 1;
			if (A[mid] > k)
				p2 = mid - 1;
		}

		System.out.println("[-1, -1]");
	}

}
