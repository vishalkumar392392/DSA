package com.twopointer.binarysearch;

import java.util.Arrays;

public class PairOfNumSumK {

	public static void main(String[] args) {

		int arr[] = { 8, 12, 20, -5, 10, -3, 6 };
		int k = 3;
		Arrays.sort(arr);
		System.out.println(containsSumK(arr, k));

	}

	public static boolean containsSumK(int arr[], int k) {

		int p1 = 0;
		int p2 = arr.length - 1;

		while (p1 <= p2) {

			int mid = (p1 + p2) / 2;

			if (arr[p1] + arr[p2] == k)
				return true;

			if (arr[mid] <= k)
				p1 = mid + 1;
			else
				p2 = mid - 1;

		}

		return false;
	}

}
